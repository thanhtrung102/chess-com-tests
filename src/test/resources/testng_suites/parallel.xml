<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Chess.com Parallel Test Suite" verbose="1" parallel="methods" thread-count="5" data-provider-thread-count="2">
    <test name="All Tests - Parallel Execution">
        <classes>
            <!-- Navigation Tests (8 tests) -->
            <class name="com.chess.tests.NavigationTests"/>

            <!-- Authentication Tests (6 tests) -->
            <class name="com.chess.tests.LoginTests"/>

            <!-- Play Mode Tests (7 tests) -->
            <class name="com.chess.tests.PlayModeTests"/>

            <!-- Puzzle Tests (9 tests) -->
            <class name="com.chess.tests.PuzzleTests"/>

            <!-- Learn Tests (7 tests) -->
            <class name="com.chess.tests.LearnTests"/>
        </classes>
    </test>

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
</suite>
